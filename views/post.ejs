<!DOCTYPE html>
<html>
<head>
    <title><%= post.title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <h1><%= post.title %></h1>
    <p><%= post.content %></p>
    <a href="/">Back to Home</a>

    <section class="py-5 text-center container bg-dark-subtle">
      <div class="row py-lg-5 " >
        <div class="col-lg-6 col-md-8 mx-auto">
          <h1 class="fw-light"><%= post.title %></h1>
          <p class="lead text-body-secondary"><%= post.description %></p>
          <p>
            <a href="/" class="btn btn-primary my-2">Back to Home</a>
            <a href="/recent" class="btn btn-secondary my-2">Write a New Blog</a>
          </p>
        </div>
      </div>
    </section>

    <div class="album py-5 bg-body-tertiary">
      <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
          <% post.image.forEach((image, index) => { %>
          <div class="col">
            <div class="card shadow-sm">
              <img width="100%" height="225" src="/styles/images/<%= image %>" alt="<%= post.title %>">
             
              <div class="card-body">
                <!-- Dynamic content for each image -->
                <p class="card-text"><%= post.contents[index] %></p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                  </div>
                  <small class="text-body-secondary">9 mins</small>
                </div>
              </div>
            </div>
          </div>
          <% }) %> <!-- End of the forEach loop -->
        </div>
      </div>
    </div>
</body>
</html>
